<div class="pledge">

<h2>Back this project!</h2>

<h3><%=@project[:title]%></h3>

<%= form_for [@project, @pledge] do |f| %>

  <% if @pledge.errors.any? %>
    <div class = "error_messages">
  	<h3>Unable to complete pledge:</h3>
    <ul>

  		<% for message in @pledge.errors.full_messages %>
  			      <div class="alert alert-error">   
              <strong>Error! </strong><%=message%>  
              </div>  
  		<% end %>
  	</ul>
  </div>
  <% end %>

  <div class="field">
	<%= f.label :amount %>
	<%= f.number_field :amount%>
  </div> 

    <div class="action">
  	
  	<%= button_tag(type: "submit", class: "btn btn-success") do %>
    <i class="icon-leaf"></i> Pledge Now! 
    <% end %>
  </div>
 <%end%>
 <br>
 <br>
 <br>
 <%= link_to '< back to project', "/projects/#{@project.id}", class: 'btn btn-info' %>